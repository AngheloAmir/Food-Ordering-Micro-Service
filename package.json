{
  "name": "modular-micro-service",
  "version": "1.0.0",
  "description": "Node.js backend service with TypeScript",
  "scripts": {
    "init": "cd database && npm run start --debug",
    "db:start": "cd database && npm run start",
    "db:stop": "cd database && npm run stop",
    "node:local": "cd backend/node-service && npm run dev",
    "node:docker": "docker compose -f backend/node-service/docker-compose.yml up -d",
    "dev:local": "npm run db:start && npm run node:local",
    "dev:docker": "npm run db:start && npm run node:docker",
    "stop:docker": "docker compose -f backend/node-service/docker-compose.yml down",
    "restaurant:dev": "cd frontend/restaurant && npm run dev"
  }
}